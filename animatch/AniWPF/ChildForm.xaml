<Window x:Class="AniWPF.ChildForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AniWPF"
        mc:Ignorable="d" FontSize="20"
        Title="ChildForm" Height="1024" Width="1440">
    <Grid Background="LightPink">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image x:Name="biglogo" HorizontalAlignment="Center" Height="185" Width="656" Source="/big_logo_white.png"/>
            <TextBlock Text="логін" Height="26" Width="60"/>
            <TextBox x:Name="in_login" Width="453" Height="53" />
            <TextBlock Text="пошта" Height="26" Width="60" />
            <TextBox x:Name="in_email" Width="453" Height="53" />
            <TextBlock Text="пароль" Height="26" Width="70" />
            <TextBox x:Name="in_password" Width="453" Height="53" />
            <Button x:Name="registration" Content="зареєструватися" Width="258" Height="53" Click="Registration_Click"/>
        </StackPanel>
    </Grid>
</Window>
